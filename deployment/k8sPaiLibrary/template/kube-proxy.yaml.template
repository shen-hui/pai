apiVersion: apps/v1
kind: DaemonSet
metadata:
  name: kube-proxy
  namespace: kube-system
  labels:
    k8s-app: kube-proxy
spec:
  selector:
    matchLabels:
      name: kube-proxy-container
  template:
    metadata:
      labels:
        name: kube-proxy-container
    spec:
      hostNetwork: true
      containers:
      - image: {{ cluster_cfg['kubernetes']['docker-registry'] }}/hyperkube:{{ cluster_cfg['kubernetes']['hyperkube-version'] }}
        name: kube-proxy-container
        command:
        - /hyperkube
        - proxy
        - --master
        - {{ cluster_cfg['kubernetes']['api-servers-ip'] }}:{{ cluster_cfg['kubernetes']['api-servers-port'] }}
        - --cluster-cidr
        - {{ cluster_cfg['kubernetes']['service-cluster-ip-range'] }}
        securityContext:
          privileged: true
        volumeMounts:
        - mountPath: /etc/kubernetes
          name: etc-kubernetes
      nodeSelector:
        beta.kubernetes.io/os: linux
      volumes:
      - hostPath:
          path: /etc/kubernetes
        name: etc-kubernetes