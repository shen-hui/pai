apiVersion: v1
kind: Pod
metadata:
  name: etcd-server
  labels:
    app: etcd-server
spec:
  hostNetwork: true
  containers:
  - image: {{ cluster_cfg['kubernetes']['docker-registry'] }}/etcd:{{ cluster_cfg['kubernetes']['etcd-version'] }}
    name: etcd-container
    command:
    - /usr/local/bin/etcd
    - --name
    - {{ hostcofig['etcdid'] }}
    - --initial-advertise-peer-urls
    - http://{{ hostcofig['hostip'] }}:2380
    - --initial-cluster-state
    - {{ cluster_cfg['kubernetes']['etcd-initial-cluster-state'] }}
    - --listen-peer-urls
    - http://0.0.0.0:2380
    - --advertise-client-urls
    - http://{{ hostcofig['hostip'] }}:4001
    - --listen-client-urls
    - http://0.0.0.0:4001
    - --initial-cluster
    - {{ cluster_cfg['kubernetes']['etcd_cluster_ips_peer'] }}
    - --data-dir
    - /var/etcd/data
    readinessProbe:
      httpGet:
        path: '/health'
        port: 4001
      initialDelaySeconds: 10
      periodSeconds: 30
      timeoutSeconds: 10
    ports:
    - containerPort: 2380
      hostPort: 2380
      name: serverport
    - containerPort: 4001
      hostPort: 4001
      name: clientport
    volumeMounts:
    - mountPath: /var/etcd
      name: varetcd
    {%- if cluster_cfg['kubernetes']['qos-switch'] == "true" %}
    resources:
      requests:
        memory: "1Gi"
        cpu: "1000m"
    {%- endif %}
  volumes:
  - hostPath:
      path: {{ cluster_cfg['kubernetes']['etcd-data-path'] }}
    name: varetcd
