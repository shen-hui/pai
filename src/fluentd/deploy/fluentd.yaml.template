kind: DaemonSet
apiVersion: apps/v1
metadata:
  name: fluentd-ds
spec:
  selector:
    matchLabels:
      app: fluentd
  template:
    metadata:
      labels:
        app: fluentd
    spec:
      tolerations:
      - key: node-role.kubernetes.io/master
        effect: NoSchedule
      imagePullSecrets:
      - name: {{ cluster_cfg["cluster"]["docker-registry"]["secret-name"] }}
      containers:
      - name: fluentd
        image: {{ cluster_cfg['cluster']['docker-registry']['prefix'] }}fluentd:{{ cluster_cfg['cluster']['docker-registry']['tag'] }}
        imagePullPolicy: Always
        env:
        - name: FLUENTD_ARGS
          value: --no-supervisor -q
        - name: FLUENT_UID
          value: "0"
        volumeMounts:
        - name: varlog
          mountPath: /var/log
        - name: docker-dataroot-containers
          mountPath: {{ cluster_cfg["cluster"]["common"]["docker-data-root"] }}/containers
          readOnly: true
        - name: config-volume
          mountPath: /etc/fluent/config.d
      volumes:
      - name: varlog
        hostPath:
          path: /var/log
      - name: docker-dataroot-containers
        hostPath:
          path: {{ cluster_cfg["cluster"]["common"]["docker-data-root"] }}/containers
      - name: config-volume
        configMap:
          name: fluentd-config
      terminationGracePeriodSeconds: 30
