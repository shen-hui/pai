pushd $(dirname "$0") > /dev/null

{% if cluster_cfg["cluster"]["common"]["k8s-rbac"] != "false" %}

mkdir -p certs
{% if "ssl" in cluster_cfg["pylon"] and cluster_cfg["pylon"]["ssl"] %}
cp {{ cluster_cfg["pylon"]["ssl"]["crt_path"] }} certs/tls.crt
cp {{ cluster_cfg["pylon"]["ssl"]["key_path"] }} certs/tls.key
{% endif %}

kubectl create secret generic kubernetes-dashboard-certs-openpai --from-file=certs \
  --dry-run -n kube-system -o yaml | kubectl apply --overwrite=true -f - || exit $?

kubectl apply --overwrite=true -f rbac.yaml || exit $?
kubectl apply --overwrite=true -f k8s-dashboard.yaml || exit $?
{% endif %}

popd > /dev/null
