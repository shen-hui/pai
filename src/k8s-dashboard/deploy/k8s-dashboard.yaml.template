apiVersion: apps/v1
kind: Deployment
metadata:
  name: kubernetes-dashboard-openpai
  namespace: kube-system
  labels:
    k8s-app: kubernetes-dashboard-openpai
spec:
  replicas: 1
  selector:
    matchLabels:
      k8s-app: kubernetes-dashboard-openpai
  template:
    metadata:
      labels:
        k8s-app: kubernetes-dashboard-openpai
    spec:
      hostNetwork: true
      nodeSelector:
        kubernetes.io/hostname: {{ cluster_cfg['k8s-dashboard']['dashboard-host'] }}
      containers:
      - name: kubernetes-dashboard-openpai
        image: {{ cluster_cfg["cluster"]["docker-registry"]["prefix"] }}kubernetes-dashboard-amd64:{{ cluster_cfg["cluster"]["docker-registry"]["tag"] }}
        args:
          - --auto-generate-certificates
          - --port={{ cluster_cfg['k8s-dashboard']['dashboard-port'] }}
          - --tls-cert-file=/tls.crt
          - --tls-key-file=/tls.key
          - --token-ttl=604800 # 7d
        volumeMounts:
          - name: kubernetes-dashboard-certs-openpai
            mountPath: /certs
        {%- if cluster_cfg['cluster']['common']['qos-switch'] == "true" %}
        resources:
          # the ideal cpu setting will be 3.5, according to our experiment. If the server hosting k8s dashboard has enough resource, user can change this setting to a larger value.
          requests:
            cpu: "1000m"
            memory: 1000Mi
        {%- endif %}
        ports:
        - containerPort: {{ cluster_cfg['k8s-dashboard']['dashboard-port'] }}
        livenessProbe:
          httpGet:
            scheme: HTTPS
            path: /
            port: {{ cluster_cfg['k8s-dashboard']['dashboard-port'] }}
          initialDelaySeconds: 30
          timeoutSeconds: 30
      imagePullSecrets:
      - name: {{ cluster_cfg["cluster"]["docker-registry"]["secret-name"] }}
      tolerations:
      - key: "CriticalAddonsOnly"
        operator: "Exists"
      - key: node-role.kubernetes.io/master
        effect: NoSchedule
      volumes:
        - name: kubernetes-dashboard-certs-openpai
          secret:
            secretName: kubernetes-dashboard-certs-openpai
      serviceAccountName: kubernetes-dashboard-openpai
