apiVersion: apps/v1
kind: Deployment
metadata:
  name: grafana
spec:
  replicas: 1
  selector:
    matchLabels:
      app: grafana
  template:
    metadata:
      labels:
        app: grafana
    spec:
      hostNetwork: true
      hostPID: false
      volumes:
      - name: grafana-confg-volume
        configMap:
          name: grafana-configuration
      containers:
      - name: grafana
        image: {{ cluster_cfg["cluster"]["docker-registry"]["prefix"] }}grafana:{{ cluster_cfg["cluster"]["docker-registry"]["tag"] }}
        imagePullPolicy: Always
        ports:
        - containerPort: {{ cluster_cfg["grafana"]["port"] }}
          protocol: TCP
        volumeMounts:
        - mountPath: /grafana-configuration
          name: grafana-confg-volume
        env:
        - name : GRAFANA_URL
          value: {{ cluster_cfg["grafana"]["url"] }}
        - name: GF_AUTH_ANONYMOUS_ENABLED
          value: "true"
        - name: GF_USERS_DEFAULT_THEME
          value: light
        {%- if cluster_cfg['cluster']['common']['qos-switch'] == "true" %}
        resources:
          limits:
            memory: "256Mi"
        {%- endif %}
      imagePullSecrets:
      - name: {{ cluster_cfg["cluster"]["docker-registry"]["secret-name"] }}
